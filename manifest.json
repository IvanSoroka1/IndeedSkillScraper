{
    "manifest_version": 2,
    "name": "Indeed Job Scraper",
    "version": "1.0",
    "description": "Scrapes Indeed jobs and sends data to backend",
    "permissions": [
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "*://localhost:5000/*",
      "http://localhost/*",
      "http://127.0.0.1/*",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Scrape Indeed Jobs"
    },
    "content_scripts": [
      {
        "matches": ["https://*.indeed.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  